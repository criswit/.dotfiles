[core]
	editor = nvim
	autocrlf = input
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore_global

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	default = simple
	autoSetupRemote = true

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	df = diff
	dc = diff --cached
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	last = log -1 HEAD
	unstage = reset HEAD --
	amend = commit --amend
	branches = branch -a
	tags = tag -l
	stashes = stash list
	remotes = remote -v

[merge]
	tool = vimdiff

[diff]
	algorithm = patience
	compactionHeuristic = true

[fetch]
	prune = true

[rerere]
	enabled = true

[help]
	autocorrect = 1
[commit]
	gpgsign = true
[tag]
	gpgSign = true
